<h1>Rotten Mangoes</h1>

<div>
  <%= form_tag movies_path, :method => 'get' do %>
  <%= text_field_tag :title, params[:title], placeholder: "Movie Title" %>
  <%= text_field_tag :director, params[:director], placeholder: "Director" %>
  <%= select_tag "runtime_in_minutes", options_for_select([[""], ["Under 90 minutes",1], ["Between 90 and 120 minutes",2], ["Over 120 minutes",3]]) %>

  <%= submit_tag "Search" %>
  <% end %>
</div>
<%= link_to "Submit a Movie!", new_movie_path %>
<hr>
<% if @movies.size > 0 %>
  <% @movies.each do |movie| %>
    <%= render partial: 'movie', locals: { movie: movie } %>
    <%= render partial: 'reviews', locals: { movie: movie } %>
  <hr>
  <%end%>
<% elsif @movies.size == 0 %>
  <p>Your search did not return any results</p>
  <%= link_to "Back to all movies", movies_path %><br/>
<% end %>


