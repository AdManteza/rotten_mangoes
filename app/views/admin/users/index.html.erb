<h1>Users List</h1>

<%= paginate @users %>

<% @users.each do |user| %>
  <p>
    <%= link_to "#{user.full_name}", user_path(user)%> <small><%="#{user.email}" %></small><%= link_to "Edit", edit_admin_user_path(user) %> 
    <%= link_to "Delete", [:admin, user], method: :delete, data: {confirm: "You sure?"} %>
  </p>
<% end %>
<h3><%= link_to "Create a new User", new_admin_user_path %></h3>