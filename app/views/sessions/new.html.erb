<div class="container">
  <div class="row">
    <div class="col-md-offset-5 col-md-3">
      <%= form_tag session_path, class:"form-login" %>
      <h4>Welcome back</h4>
      <input type="text" name="email" id="email" class="form-control input-sm chat-input" placeholder="email" />
      </br>
      <input type="password" class="form-control input-sm chat-input" name="password" id="password" placeholder="password">
      </br>
      <div class="wrapper">
      <span class="group-btn">     
          <%= submit_tag "login", class:"btn btn-primary btn-md" %>
      </span>
      </div>
      </div>
    </div>
  </div>
</div>








